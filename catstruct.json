{
	"buildSettings": {
		"stylus": {
			"watchPath": "app/**/*.styl",
			"sourcePath": "",
			"outputPath": "dist/assets/css",
			"dependenciesToImport": ["normalize", "nib", "rupture", "mixins", "fonts", "variables", "sprite"],
			"compileHelperFunctions": ["nib()", "rupture()"]
		},

		"pug": {
			"watchPath": "app/**/*.pug",
			"sourcePath": "app/**/*.pug",
			"filterPath": "app/pages/*",
			"outputPath": "dist",
			"dataPath": "app/data"
		},

		"javascript": {
			"watchPath": ["app/**/*.js", "app/**/*.coffee"],
			"sourcePath": "app/app.coffee",
			"outputPath": "dist/assets/js",
			"basedir": ["./app"],
			"debug": true
		},

		"images": {
			"watchPath": "app/assets/images/**/*",
			"sourcePath": "app/assets/images/**/*",
			"outputPath": "dist/assets/images"
		},

		"sprites": {
			"watchPath": "app/assets/sprites/*",
			"spriteData": "app/assets/sprites/**/*",
			"image": {
				"imgFilename": "sprite.png",
				"imgPath": "/assets/images/sprite.png",
				"imageOutputPath": "dist/assets/images"
			},
			"styl": {
				"stylName": "sprite.styl",
				"stylPath": "sprite.styl",
				"stylOutputPath": "app/assets/styles"
			},
			"padding": 10
		}
	},

	"additionalScriptsSettings": {
		"createBlock": {
			"blocksDir": "app/blocks/",
			"layoutsDir": "app/layouts/",
			"pagesDir": "app/pages/";
		},

		"importFonts": {

		}
	}
}
